<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="2dp"
              android:weightSum="8"
    >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light_green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="18dp"
            android:text="MA 20-03"
            android:textColor="@color/powaars"/>

        <TextView
            android:id="@+id/milk_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="12dp"
            android:text="400ml"
            android:textColor="@color/powaars"/>

        <TextView
            android:id="@+id/lena_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="12dp"
            android:text="450ml"
            android:textColor="@color/powaars"/>

        <ImageView
            android:id="@+id/suskewiiieeet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="9dp"
            android:src="@drawable/ic_action_navigation_check"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="11:30"
            android:textColor="@color/powaars"/>

        <TextView
            android:id="@+id/expression_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="12dp"
            android:text="400ml"
            android:textColor="@color/powaars"/>

        <RelativeLayout
            android:id="@+id/delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:padding="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_action_content_remove_circle_outline"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>